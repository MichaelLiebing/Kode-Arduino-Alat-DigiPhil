      if (digitalRead(SetButtonPin)){
        ringtone++;
        if (ringtone > 2){       
          ringtone = 0;
        }
        delay(150);
    	}
      if (digitalRead(TakeButtonPin)){
        ringtone--;
        if (ringtone < 0){       
          ringtone = 2;
        }
        delay(150);
      }
