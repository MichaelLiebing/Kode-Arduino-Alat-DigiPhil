        lcd.print(" = April");
      }
      else if (month == 5){
        lcd.print(" = May");
      }
      else if (month == 6){
        lcd.print(" = June");
      }
      else if (month == 7){
        lcd.print(" = July");
      }
      else if (month == 8){
        lcd.print(" = August");
      }
      else if (month == 9){
        lcd.print(" = September");
      }
      else if (month == 10){
        lcd.print(" = October");
