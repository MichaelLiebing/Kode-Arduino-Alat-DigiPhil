      lcd.clear();              
      lcd.setCursor(0, 0);      
      lcd.print("Minutes Interval!");  
      lcd.setCursor(0, 1);
      lcd.print(intervalhour);
      lcd.print(":");

      if(intervalminutes<10){
        lcd.print("0");
      }
      lcd.print(intervalminutes);
      lcd.print(":");

      if(intervalseconds<10){
        lcd.print("0");
      }
