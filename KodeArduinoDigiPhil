        case 2:
        lcd.print(" = Tuesday");
        break;
        case 3:
        lcd.print(" = Wednesday");
        break;
        case 4:
        lcd.print(" = Thursday");
        break;
        case 5:
        lcd.print(" = Friday");
        break;
        case 6:
        lcd.print(" = Saturday");
        break;
